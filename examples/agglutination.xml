<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- Simulation definition -->
<simulation world-size="200um 100um" dt="1ms" aiterations="10000">
    <module name="object-generator">
        <object class="cell.Yeast" probability="0.05">
            <molecule name="LM1" amount="5000" />
        </object>
        <object class="cell.Yeast" probability="0.05">
            <molecule name="LM2" amount="5000" />
        </object>
    </module>
    <module name="streamlines" grid="200 100" inlet-velocity="500um/s" />
    <module name="agglutination" >
        <bond association-constant="500" disassociation-constant="3" ligand="LM1" receptor="LM2" receptor-size="0.1" />
    </module>

    <!-- Initial objects -->
    <object class="cell.Cell" type="pinned" volume="2000um3">
        <molecule name="LM1" amount="5000" />
        <molecule name="LM2" amount="5000" />
    </object>
</simulation>

