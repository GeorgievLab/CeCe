<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- Simulation definition -->
<simulation world-size="300um 300um" dt="50ms" iterations="10000">
    <!-- Initialize diffusion module -->
    <module name="diffusion" grid="200" abackground="#ffffff">
        <signal name="Sig1" diffusion-rate="1um2/s"     color="#ff0000" />
        <signal name="Sig2" diffusion-rate="0.5um2/s"   color="#00ff00" />
        <signal name="Sig3" diffusion-rate="1um2/s"     color="#0000ff" />
        <signal name="Sig4" diffusion-rate="100um2/s"   color="#ff00ff" />
    </module>

    <!-- Define production programs -->
    <program name="makeSig1" language="stochastic-reactions-intercellular">
<![CDATA[[
    null > 0.9 > Sig1;
    Sig1 > 0.3 > env;
]]>
    </program>
    <program name="makeSig2" language="stochastic-reactions-intercellular">
<![CDATA[[
    null > 0.8 > Sig2;
    Sig2 > 0.4 > env;
]]>
    </program>
    <program name="makeSig3" language="stochastic-reactions-intercellular">
<![CDATA[[
    null > 0.8 > Sig3;
    Sig3 > 0.5 > env;
]]>
    </program>
    <program name="makeSig4" language="stochastic-reactions-intercellular">
<![CDATA[[
    null > 0.9 > Sig4;
    Sig4 > 0.5 > env;
]]>
    </program>

    <!-- Create yeasts -->
    <object class="cell.Yeast" position="5um 5um"   programs="makeSig1" growth-rate="10um3/s" />
    <object class="cell.Yeast" position="-5um -5um" programs="makeSig2" growth-rate="1um3/s" />
    <object class="cell.Yeast" position="5um -5um"  programs="makeSig3" growth-rate="5um3/s" />
    <object class="cell.Yeast" position="-5um 5um"  programs="makeSig4" growth-rate="15um3/s" />

    <!-- Prints information every iteration -->
    <module name="python:objectCount">
<![CDATA[[
def update(dt, simulation):
    print "Iteration:", simulation.iteration, "/", simulation.iterations
    print "Objects:", simulation.objectsCount
]]>
    </module>
</simulation>



