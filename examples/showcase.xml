<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- Simulation definition -->
<simulation world-size="160um 90um" dt="1ms" aiterations="5000" background="black">
    <!-- Produce GFP -->
    <program name="make-gfp" language="stochastic-reactions-intercellular">
<![CDATA[
        null < 0.005, 10 > GFP;
        GFP > 0.5 > env;
]]>
    </program>

    <!-- Produce RFP -->
    <program name="make-rfp" language="stochastic-reactions-intercellular">
<![CDATA[
        null < 0.005, 1 > RFP;
        RFP > 0.5 > env;
]]>
    </program>

    <!-- Produce YFP -->
    <program name="make-yfp" language="stochastic-reactions-intercellular">
<![CDATA[
        null < 0.005, 1 > YFP;
        YFP > 0.5 > env;
]]>
    </program>

    <!-- Produce BFP -->
    <program name="make-bfp" language="stochastic-reactions-intercellular">
<![CDATA[
        env > 0.4 > GFP;
        env > 0.4 > RFP;
        GFP + RFP > 1 > BFP;
        BFP > 0.5 > env;
]]>
    </program>

    <!-- Define diffusion module -->
    <module name="diffusion" grid="320 180">
        <signal name="GFP" diffusion-rate="50um2/s" degradation-rate="0.1/s" color="green" />
        <signal name="RFP" diffusion-rate="50um2/s" color="red" />
        <signal name="YFP" diffusion-rate="50um2/s" color="yellow" />
        <signal name="BFP" diffusion-rate="50um2/s" color="blue" />
    </module>

    <!-- Object generator -->
    <module name="object-generator">
        <object class="cell.Yeast" probability="0.005" programs="make-gfp" position-min="-80um -30um" position-max="-78um 30um" />
        <object class="cell.Yeast" probability="0.005" programs="make-rfp" position-min="-80um -30um" position-max="-78um 30um" />
        <object class="cell.Yeast" probability="0.005" programs="make-yfp" position-min="-80um -30um" position-max="-78um 30um" />
        <object class="cell.Yeast" probability="0.005" programs="make-bfp" position-min="-80um -30um" position-max="-78um 30um" />
    </module>

    <!-- Enable streamlines with diffusion -->
    <module name="streamlines" grid="160 90"
            inlet-velocity="500um/s"
            kinematic-viscosity="0.658mm2/s"
    />
    <module name="diffusion-streamlines" />

    <module name="agglutination">
        <bond ligand="GFP" receptor="RFP" receptor-size="1" association-constant="5000" disassociation-constant="3" />
        <bond ligand="YFP" receptor="BFP" receptor-size="1" association-constant="5000" disassociation-constant="3" />
        <bond ligand="GFP" receptor="YFP" receptor-size="1" association-constant="5000" disassociation-constant="3" />
        <bond ligand="RFP" receptor="YFP" receptor-size="1" association-constant="5000" disassociation-constant="3" />
    </module>

    <!-- Put static cell into simulation center -->
    <object class="cell.Cell" type="static" volume="2000um3">
        <molecule name="GFP" amount="10000" />
        <molecule name="RFP" amount="10000" />
    </object>

    <!-- Limit scene by rectangles -->
    <obstacle type="rectangle" position="0 46um" size="160um 4um" />
    <obstacle type="rectangle" position="0 -46um" size="160um 4um" />
</simulation>

